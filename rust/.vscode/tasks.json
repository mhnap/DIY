// Using <https://github.com/cargo-limit/cargo-limit>.
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cargo build",
			"type": "cargo",
			"command": "lbuild",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
			},
			"dependsOn": [
				"clear terminal"
			],
			"env": {
				"CARGO_MSG_LIMIT": "1"
			}
		},
		{
			"label": "cargo check",
			"type": "cargo",
			"command": "lcheck",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"clear terminal"
			],
			"env": {
				"CARGO_MSG_LIMIT": "1"
			}
		},
		{
			"label": "cargo clippy",
			"type": "cargo",
			"command": "lclippy",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
			},
			"dependsOn": [
				"clear terminal"
			],
			"env": {
				"CARGO_MSG_LIMIT": "1"
			}
		},
		{
			"label": "cargo fmt",
			"type": "cargo",
			"command": "fmt",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
			},
			"dependsOn": [
				"clear terminal"
			]
		},
		{
			"label": "clear terminal",
			"type": "shell",
			"command": "clear",
			"group": "build"
		},
	]
}